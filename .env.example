# Claude API key for Anthropic's Claude models
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API key for LLM integration
OPENAI_API_KEY=your_openai_api_key_here

# Vector Store settings (chromadb, weaviate, qdrant, faiss, milvus)
VECTOR_STORE_TYPE=chromadb

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Weaviate settings (optional)
WEAVIATE_MODE=embedded
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Qdrant settings (optional)
QDRANT_MODE=memory
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# FAISS settings (optional)
FAISS_INDEX_TYPE=flat

# Milvus settings (optional)
MILVUS_MODE=lite
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Data source adapter (yahoo, alpha_vantage, polygon, csv)
DATA_SOURCE=yahoo

# Data settings
TICKER_SYMBOLS=AAPL,MSFT,GOOGL,AMZN
DATA_PERIOD=1y
DATA_INTERVAL=1d

# Alpha Vantage API key (required if using alpha_vantage)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Polygon.io API key (required if using polygon)
POLYGON_API_KEY=your_polygon_key_here

# CSV data directory (for csv adapter)
CSV_DATA_DIR=./data/csv